<%= simple_form_for @issue do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :description, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit" %>
    <%= link_to "Cancel", issues_path %>
  </div>

<% end %>
